{
  "name": "ws-market-data-server",
  "version": "1.0.0",
  "description": "All-Purpose WebSocket Market Data Server",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "cli": "tsx src/cli/index.ts",
    "cli:import": "tsx src/cli/commands/import.ts",
    "cli:materialize": "tsx src/cli/commands/materialize.ts",
    "cli:migrate": "tsx src/cli/commands/migrate.ts",
    "cli:backfill": "tsx src/cli/commands/backfill.ts",
    "cli:analyze": "tsx src/cli/commands/analyze.ts",
    "refresh-mvs": "psql $DATABASE_URL -c 'REFRESH MATERIALIZED VIEW CONCURRENTLY forex_candles_5m; REFRESH MATERIALIZED VIEW CONCURRENTLY forex_candles_15m; REFRESH MATERIALIZED VIEW CONCURRENTLY forex_candles_1h; REFRESH MATERIALIZED VIEW CONCURRENTLY forex_candles_4h; REFRESH MATERIALIZED VIEW CONCURRENTLY forex_candles_12h;'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.931.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "dukascopy-node": "^1.45.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.7.0",
    "p-queue": "^8.1.1",
    "pg": "^8.16.3",
    "pg-copy-streams": "^7.0.0",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "ws": "^8.18.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.6",
    "@types/pg-copy-streams": "^1.2.5",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
